#!/bin/sh

if [ $# -eq 0 ] || [ "$1" = "-h" ] ; then
	printf "Usage:\\tconfluent-zookeeper [-h]\\thelp\\n"
	printf "Usage:\\tsudo -H -u {{ zookeeper.user }} {{ zookeeper.user_service }}/confluent-zookeeper [ start | stop | restart ]\\n"
	exit 0
fi

if [ "$1" = "start" ] ; then
	printf "[%s %s] INFO Starting {{ zookeeper.service_name }}...\\n" `/usr/bin/date +'%Y-%m-%d %H:%M:%S'` | /usr/bin/tee -a /var/log/kafka/server.log
  {% for key, value in zookeeper.environment.items() -%}
  {{ " " ~ key }}="{{ value }}"
  {%- endfor %}
  /usr/bin/nohup /usr/bin/zookeeper-server-start {{ zookeeper.config_file }} >> /var/log/kafka/server.log 2>&1 &
elif [ "$1" = "stop" ] ; then
	printf "[%s %s] INFO Stopping {{ zookeeper.service_name }}...\\n" `/usr/bin/date +'%Y-%m-%d %H:%M:%S'` | /usr/bin/tee -a /var/log/kafka/server.log
	/usr/bin/zookeeper-server-stop /etc/kafka/zookeeper.properties
elif [ "$1" = "restart" ] ; then
	printf "[%s %s] INFO Stopping {{ zookeeper.service_name }}...\\n" `/usr/bin/date +'%Y-%m-%d %H:%M:%S'` | /usr/bin/tee -a /var/log/kafka/server.log
	/usr/bin/zookeeper-server-stop /etc/kafka/zookeeper.properties
	printf "[%s %s] INFO Starting {{ zookeeper.service_name }}...\\n" `/usr/bin/date +'%Y-%m-%d %H:%M:%S'` | /usr/bin/tee -a /var/log/kafka/server.log
  {% for key, value in zookeeper.environment.items() -%}
  {{ " " ~ key  }}="{{ value }}"
  {%- endfor %}
  /usr/bin/nohup /usr/bin/zookeeper-server-start {{ zookeeper.config_file }} >> /var/log/kafka/server.log 2>&1 &
fi
